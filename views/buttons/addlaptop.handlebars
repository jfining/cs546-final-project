<form method="POST" action="/admin/addedlaptop">
    <p>Add Laptop Details</p>
    <ol>
        <ul>
            <li>Name: <input type="text" id="name" name="name" placeholder="Product Name" required autofocus></li>
            <li>Brand: <input type="text" id="brand" name="brand" placeholder="Brand" required></li>
            <li>Price: <input type="number" min="0" id="price" name="price" placeholder="Price in $" required></li>
            <li>Screen Size: <input type="number" min="10" max="20" id="size" name="ss" placeholder="Screen size in inches"
                    required></li>
            <li>RAM: <input type="number" id="ram" name="ram" placeholder="RAM" required></li>
            <li>Processor:<input type="text" id="processor" name="processor" placeholder="Processor" required></li>
            <li>HDD: <input type="number" min="1" id="hdd" name="hdd" placeholder="TB(s)" required></li>
            <li>Rating: <input type="number" min="1" max="5" id="rating" name="rating" placeholder="rating out of 5"
                    required></li>
            <li>Sold:<input type="radio" id="sold1" name="sold" value="true">
                <label for="sold1">True</label>
                <input type="radio" id="sold2" name="sold" value="false">
                <label for="sold2">False</label>
            </li>
            <li>Image 1 <input type="file" name="pic1" accept="image/*"></li>
            <li>Image 2 <input type="file" name="pic2" accept="image/*"></li>
            <li>Image 3 <input type="file" name="pic3" accept="image/*"></li>
        </ul>
        <button type="submit">Add Laptop</button>
    </ol>
</form>